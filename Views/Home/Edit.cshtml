@model MoviesWebApp.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" ></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category 1:</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))" class="form-control">
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId2" class="control-label">Category 2:</label>
        <select asp-for="CategoryId2" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))" class="form-control">
        </select>
        <span asp-validation-for="CategoryId2"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-edit">Confirm</button>
        <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
    </div>
</form>
