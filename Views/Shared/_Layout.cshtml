<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="shortcut icon" href="~/icons/movie-camera_icon.ico" type="image/x-icon" />
</head>
<body>
	<header>
		<nav class="navbar">
			<a class="navbar-brand" href="#">
				<img src="~/icons/HomePage.ico" alt="Movies Logo" style="height: 30px;">
			</a>
			<div class="navbar-ul">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Create">Add A Movie</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Search">Search</a>
					</li>
				</ul>
			</div>
		</nav>
	</header>

	<main role="main">
		@RenderBody()
	</main>

	<footer>
		&copy; 2024 - MoviesWebApp - <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
	</footer>
</body>
</html>
